<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Title -->
    <title>{% if title %}{{ title }} | {% endif %}{{ site.title or "Mon Site Obsidian" }}</title>
    
    <!-- Meta tags -->
    <meta name="description" content="{{ description or site.description or 'Site g√©n√©r√© depuis Obsidian avec Eleventy et markdown-it' }}">
    <meta name="author" content="{{ author or site.author or 'Auteur' }}">
    <meta name="generator" content="Obsidian + Eleventy + markdown-it">
    <meta name="robots" content="index, follow">
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="{% if layout == 'note.njk' or layout == 'article.njk' %}article{% else %}website{% endif %}">
    <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta property="og:description" content="{{ description or site.description }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:site_name" content="{{ site.title }}">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.title }}">
    <meta name="twitter:description" content="{{ description or site.description }}">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github.min.css">
    <link rel="stylesheet" href="/static/css/main.css">
    
    <!-- Favicon (if exists) -->
    <link rel="icon" type="image/x-icon" href="/static/img/favicon.ico">
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} RSS Feed" href="/feed.xml">
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "{% if layout == 'note.njk' or layout == 'article.njk' %}Article{% else %}Website{% endif %}",
        "name": "{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}",
        "description": "{{ description or site.description }}",
        "url": "{{ site.url }}{{ page.url }}",
        {% if layout == 'note.njk' or layout == 'article.njk' %}
        "datePublished": "{{ date | date('iso') }}",
        "dateModified": "{{ modified or date | date('iso') }}",
        "author": {
            "@type": "Person",
            "name": "{{ author or site.author }}"
        },
        {% endif %}
        "publisher": {
            "@type": "Organization",
            "name": "{{ site.title }}",
            "url": "{{ site.url }}"
        }
    }
    </script>
</head>
<body class="{% if bodyClass %}{{ bodyClass }}{% endif %}">
    
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="skip-link">Aller au contenu principal</a>
    
    <!-- Header -->
    <header class="site-header" role="banner">
        <div class="header-container">
            <div class="site-branding">
                <h1 class="site-title">
                    <a href="/" rel="home">{{ site.title or "Mon Site Obsidian" }}</a>
                </h1>
                {% if site.description %}
                    <p class="site-description">{{ site.description }}</p>
                {% endif %}
            </div>
            
            <nav class="main-navigation" role="navigation" aria-label="Navigation principale">
                <ul class="nav-menu">
                    <li><a href="/" {% if page.url == "/" %}aria-current="page"{% endif %}>üè† Accueil</a></li>
                    <li><a href="/notes/" {% if page.url.startsWith("/notes/") %}aria-current="page"{% endif %}>üìù Notes</a></li>
                    <li><a href="/tags/" {% if page.url.startsWith("/tags/") %}aria-current="page"{% endif %}>üè∑Ô∏è Tags</a></li>
                    <li><a href="/about/" {% if page.url == "/about/" %}aria-current="page"{% endif %}>‚ÑπÔ∏è √Ä propos</a></li>
                </ul>
            </nav>
            
            <!-- Theme toggle button -->
            <button class="theme-toggle" aria-label="Basculer le th√®me sombre/clair" title="Basculer le th√®me">
                <span class="theme-toggle-icon">üåô</span>
            </button>
        </div>
    </header>
    
    <!-- Breadcrumb Navigation -->
    {% if page.url != "/" %}
        <nav class="breadcrumb" aria-label="Fil d'Ariane">
            <ol class="breadcrumb-list">
                <li><a href="/">Accueil</a></li>
                {% if page.url.startsWith("/notes/") %}
                    <li><a href="/notes/">Notes</a></li>
                {% elif page.url.startsWith("/tags/") %}
                    <li><a href="/tags/">Tags</a></li>
                {% endif %}
                {% if title %}
                    <li aria-current="page">{{ title }}</li>
                {% endif %}
            </ol>
        </nav>
    {% endif %}
    
    <!-- Main Content -->
    <main id="main-content" class="site-main" role="main">
        <div class="content-container">
            {{ content | safe }}
        </div>
    </main>
    
    <!-- Sidebar (optional, for additional content) -->
    {% if showSidebar %}
    <aside class="sidebar" role="complementary">
        <div class="sidebar-content">
            <!-- Recent Notes Widget -->
            <section class="widget recent-notes">
                <h3 class="widget-title">üìù Notes r√©centes</h3>
                <ul class="recent-notes-list">
                    {% for note in collections.notes | limit(5) %}
                        <li>
                            <a href="{{ note.url }}">{{ note.data.title }}</a>
                            <time datetime="{{ note.date | date('YYYY-MM-DD') }}">
                                {{ note.date | date('DD/MM/YYYY') }}
                            </time>
                        </li>
                    {% endfor %}
                </ul>
            </section>
            
            <!-- Popular Tags Widget -->
            <section class="widget popular-tags">
                <h3 class="widget-title">üè∑Ô∏è Tags populaires</h3>
                <div class="tag-cloud">
                    {% for tag in collections.allTags | limit(10) %}
                        <a href="/tags/{{ tag | slug }}/" class="tag-link">#{{ tag }}</a>
                    {% endfor %}
                </div>
            </section>
        </div>
    </aside>
    {% endif %}
    
    <!-- Footer -->
    <footer class="site-footer" role="contentinfo">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>{{ site.title }}</h4>
                    <p>{{ site.description or "Site g√©n√©r√© avec Obsidian + Eleventy" }}</p>
                </div>
                
                <div class="footer-section">
                    <h4>Navigation</h4>
                    <ul class="footer-links">
                        <li><a href="/">Accueil</a></li>
                        <li><a href="/notes/">Notes</a></li>
                        <li><a href="/tags/">Tags</a></li>
                        <li><a href="/about/">√Ä propos</a></li>
                    </ul>
                </div>
                
                <div class="footer-section">
                    <h4>Informations</h4>
                    <ul class="footer-meta">
                        <li>üìä {{ collections.notes.length }} notes</li>
                        <li>üè∑Ô∏è {{ collections.allTags.length }} tags</li>
                        <li>‚ö° G√©n√©r√© avec <a href="https://obsidian.md" target="_blank" rel="noopener">Obsidian</a> + <a href="https://11ty.dev" target="_blank" rel="noopener">Eleventy</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; {{ "now" | date("YYYY") }} {{ site.author or site.title }}. 
                   Derni√®re mise √† jour : {{ site.buildTime | date('DD/MM/YYYY') }}</p>
            </div>
        </div>
    </footer>
    
    <!-- Scripts -->
    <script src="/static/js/main.js"></script>
    
    <!-- Analytics (if configured) -->
    {% if site.analytics %}
        {{ site.analytics | safe }}
    {% endif %}
</body>
</html>